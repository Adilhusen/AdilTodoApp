<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AdilPracticalTask" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TextView_Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/darkGray</item>
        <!--        <item name="android:background">?selectableItemBackgroundBorderless</item>-->
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="TextView_Small">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/darkGray</item>
        <!--        <item name="android:background">?selectableItemBackgroundBorderless</item>-->
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="TextView_Big">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textSize">@dimen/_25ssp</item>
        <item name="android:textColor">@color/darkGray</item>
        <!--        <item name="android:background">?selectableItemBackgroundBorderless</item>-->
        <item name="android:layout_width">wrap_content</item>
    </style>
</resources>